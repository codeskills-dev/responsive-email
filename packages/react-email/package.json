{
  "name": "@responsive-email/react-email",
  "version": "0.0.3",
  "description": "A utility for writing responsive email templates with react-email",
  "keywords": [
    "responsive-email",
    "react-email",
    "email-template",
    "email",
    "email-tables"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/codeskills-dev/responsive-email.git",
    "directory": "packages/react-email"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./responsive-row": {
      "import": "./dist/responsive-row.mjs",
      "require": "./dist/responsive-row.js",
      "types": "./dist/responsive-row.d.ts"
    },
    "./responsive-column": {
      "import": "./dist/responsive-column.mjs",
      "require": "./dist/responsive-column.js",
      "types": "./dist/responsive-column.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "responsive-row": [
        "./dist/responsive-row.d.ts"
      ],
      "responsive-column": [
        "./dist/responsive-column.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "author": {
    "name": "Paul Ehikhuemen",
    "url": "https://github.com/lordelogos"
  },
  "license": "MIT",
  "dependencies": {
    "@react-email/section": "0.0.14"
  },
  "devDependencies": {
    "@responsive-email/core": "workspace:*",
    "@types/react": "18.2.14",
    "react": "18.2.0",
    "react-email": "1.9.4",
    "tsup": "^7.0.0",
    "typescript": "5.1.3"
  },
  "peerDependencies": {
    "react": "18.x"
  },
  "publishConfig": {
    "access": "public"
  }
}
